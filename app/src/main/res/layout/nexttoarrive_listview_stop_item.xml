<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/nettoarrive_stopselection_mainlayout"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:background="@android:color/white">

    <ImageView
        android:id="@+id/nexttoarrive_stopselection_accessibilityicon_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/handicap_blk"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        tools:visibility="visible"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nexttoarrive_stopselection_textview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_weight="1"
            tools:text="Preview text" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginRight="8dp"
            android:id="@+id/nexttoarrive_stopselection_distance_textview"
            android:visibility="gone"
            android:layout_weight="3"
            tools:visibility="visible"
            tools:text="100 mi" />
    </LinearLayout>


</LinearLayout>